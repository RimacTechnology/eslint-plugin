{
    "name": "@rimac-technology/eslint-plugin-rimac",
    "version": "1.0.0",
    "author": "Rimac Technology d.o.o.",
    "license": "MIT",
    "repository": "git@github.com:RimacTechnology/eslint-plugin-rimac.git",
    "main": "lib/index.js",
    "scripts": {
        "lint": "eslint './src/**/*' --quiet --cache --cache-strategy content --cache-location '.eslintcache/'",
        "build": "tsc -p tsconfig.production.json",
        "test": "jest --config=./jest.config.ts --runInBand",
        "cm": "cz",
        "release": "semantic-release",
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib"
    ],
    "engines": {
        "yarn": ">=3"
    },
    "dependencies": {
        "@typescript-eslint/types": "^5.19.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@rimac-technology/eslint-config": "^22.2.1",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.4",
        "@semantic-release/npm": "^8.0.3",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@types/node": "^16.11.26",
        "@typescript-eslint/experimental-utils": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "commitizen": "^4.2.4",
        "conventional-changelog-conventionalcommits": "^4.6.3",
        "eslint": "8.13.0",
        "eslint-plugin-eslint-plugin": "^4.1.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "pinst": "^2.1.6",
        "prettier": "^2.5.0",
        "semantic-release": "^18.0.1",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "packageManager": "yarn@3.2.0",
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
